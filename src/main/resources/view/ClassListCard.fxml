<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
            <VBox>
               <children>
                  <HBox prefHeight="14.0" prefWidth="8.0" />
                  <HBox alignment="CENTER_LEFT">
                     <children>
                    <Label fx:id="id" styleClass="cell_big_label">
                      <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                      </minWidth>
                    </Label>
                    <Label fx:id="name" alignment="CENTER" prefHeight="17.0" prefWidth="65.0" styleClass="cell_big_label" text="\$first" />
                     </children>
                  </HBox>
                  <HBox prefHeight="14.0" prefWidth="8.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER_RIGHT">
               <children>
                  <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="48.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="17.0" prefWidth="474.0" text="NUMBER OF STUDENTS:" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                    <Label fx:id="numberOfStudents" alignment="CENTER" prefHeight="17.0" prefWidth="340.0" styleClass="cell_big_label" text="\$number" textAlignment="RIGHT" />
                     </children>
                  </HBox>
               </children>
            </VBox>
      </HBox>
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
